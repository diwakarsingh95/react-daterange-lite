{
  "name": "react-daterange-lite",
  "version": "0.1.0",
  "description": "A lightweight, performant React date range picker using dayjs - optimized for modern React applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "preview": "vite",
    "build": "tsc && vite build",
    "build:preview": "vite build --mode preview",
    "build:demo": "vite build --mode demo",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "keywords": [
    "react",
    "date",
    "range",
    "picker",
    "calendar",
    "dayjs",
    "lightweight",
    "typescript"
  ],
  "author": "Diwakar <diwakar.singh313@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diwakarsingh95/react-daterange-lite.git"
  },
  "bugs": {
    "url": "https://github.com/diwakarsingh95/react-daterange-lite/issues"
  },
  "homepage": "https://github.com/diwakarsingh95/react-daterange-lite#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "dayjs": "^1.11.19"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "dayjs": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "glob": "^11.0.0",
    "rimraf": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "dayjs": "^1.11.19",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^7.2.6",
    "vite-plugin-dts": "^4.3.1",
    "vitest": "^3.2.1"
  }
}
